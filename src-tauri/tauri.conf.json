{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TradPDF",
  "version": "0.1.0",
  "identifier": "com.tradpdf.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 450,
        "title": "TradPDF",
        "width": 400,
        "alwaysOnTop": true,
        "closable": false,
        "decorations": false,
        "focus": false,
        "hiddenTitle": true,
        "label": "main",
        "dragDropEnabled": true,
        "maximizable": true,
        "minimizable": true,
        "resizable": false,
        "shadow": true,
        "visible": false,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
